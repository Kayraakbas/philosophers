{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Philo (ThreadSanitizer)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/philo",
      "args": ["5", "800", "200", "200", "8"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "TSAN_OPTIONS",
          "value": "halt_on_error=1:abort_on_error=1:print_stacktrace=1"
        }
      ],
      "externalConsole": false,
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    },
    {
      "name": "Debug Philo (Custom Args)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/philo",
      "args": [], // Will prompt for input
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "build"
    }
  ]
}
